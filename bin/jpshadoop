#!/bin/bash
echo "===================HDFS=================================";
jps -ml | grep hdfs; 
echo "===================YARN=================================";
jps -ml | grep yarn; 
echo "===================MR===================================";
jps -ml | grep mapreduce; 
echo "===================HBASE================================";
jps -ml | grep hbase;
echo "===================HIVE=================================";
jps -ml | grep hive;
echo "===================OOZIE================================";
ps aux | grep oozie | grep -v grep | awk '{print $2 " " $(NF-1) " "  $NF}'
echo "===================HUE==================================";
ps aux | grep hue | grep -v grep | awk '{print $2 " " $11 " " $12 " " $13 " " $14 " " $15 " " $16 " "}'
echo "===================KYLIN================================";
jps -ml | grep kylin;
echo "===================LIVY=================================";
jps -ml | grep livy;
